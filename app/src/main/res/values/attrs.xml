<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--LinearListView属性-->
    <declare-styleable name="LinearListView">
        <attr name="android:entries" />
        <attr name="dividerThickness" format="dimension" />
    </declare-styleable>

    <declare-styleable name="PolyvPlayerAudioCoverView">
        <attr name="show_film" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircleProgressView">
        <!--画笔宽度-->
        <attr name="progress_paint_width" format="dimension" />
        <!--画笔颜色-->
        <attr name="progress_paint_color" format="color" />
        <!--字体颜色-->
        <attr name="progress_text_color" format="color" />
        <!--字体尺寸-->
        <attr name="progress_text_size" format="dimension" />
        <!--加载进度的开始位置-->
        <attr name="location" format="enum">
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
        </attr>
    </declare-styleable>

    <attr name="radius" format="dimension" />
    <attr name="mode" format="flags">
        <flag name="none" value="0" />
        <flag name="leftTop" value="1" />
        <flag name="leftBottom" value="2" />
        <flag name="rightTop" value="4" />
        <flag name="rightBottom" value="8" />
        <flag name="left" value="3" />
        <flag name="top" value="5" />
        <flag name="bottom" value="10" />
        <flag name="right" value="12" />
        <flag name="all" value="15" />
    </attr>
    <declare-styleable name="PLVRoundRectLayout">
        <attr name="radius" />
        <attr name="mode" />
    </declare-styleable>
</resources>