<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/plv_controller_codec_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.7"
    android:background="@color/top_left_layout_color_black"
    android:visibility="gone">

    <ImageView
        android:id="@+id/plv_controller_codec_close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:padding="@dimen/talk_common_margin_l_l"
        android:src="@drawable/polyv_btn_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:translationY="120dp">

        <TextView
            android:id="@+id/plv_controller_media_codec_tv"
            style="@style/tv_click_controller_land_center"
            android:gravity="center"
            android:layout_weight="1"
            android:text="硬解" />

        <TextView
            android:id="@+id/plv_controller_av_codec_tv"
            style="@style/tv_click_controller_land_center"
            android:gravity="center"
            android:layout_weight="1"
            android:text="软解" />
    </LinearLayout>

</RelativeLayout>