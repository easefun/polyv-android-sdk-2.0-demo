<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    tools:background="#222326">

    <ImageView
        android:id="@+id/polyv_player_knowledge_point_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/polyv_player_knowledge_unselected_icon"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/polyv_player_knowledge_point_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="描述"
        android:textColor="#CCFFFFFF"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/polyv_player_knowledge_point_iv"
        android:layout_toEndOf="@id/polyv_player_knowledge_point_iv"
        android:layout_toLeftOf="@id/polyv_player_knowledge_point_time_tv"
        android:layout_toStartOf="@id/polyv_player_knowledge_point_time_tv" />

    <TextView
        android:id="@+id/polyv_player_knowledge_point_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textColor="#99FFFFFF"
        android:textSize="14sp"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>