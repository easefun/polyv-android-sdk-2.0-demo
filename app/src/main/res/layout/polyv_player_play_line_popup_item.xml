<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:background="@drawable/polyv_line_item_selector"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="8dp"
        android:paddingLeft="12dp">

        <TextView
            android:id="@+id/plv_play_main_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="硬解"
            android:textColor="@color/polyv_line_tv_primary_selector"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/plv_play_sub_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="更省电"
            android:textColor="@color/polyv_line_tv_secondary_selector"
            android:textSize="12sp" />
    </LinearLayout>
</FrameLayout>