<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/top_layout_color_white"
    android:clickable="false"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/top_left_layout_width"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/common_margin_lr"
        android:scaleType="centerCrop"
        android:src="@drawable/polyv_pic_demo" />

    <RelativeLayout
        style="@style/lo_download_commom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/center_bottom_margin_top_s"
            android:layout_toRightOf="@id/tv_seri"
            android:ellipsize="end"
            android:lines="2"
            android:text="这是一行测试的文本。。。。。。。。。。。。。。。。。。。。。。。。。。........。..。。。。。。。。。。"
            android:textColor="@color/center_view_color_blue"
            android:textSize="@dimen/center_text_size" />

        <LinearLayout
            android:id="@+id/ll_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_title"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="@dimen/bottom_tv_margin_top"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/polyv_time" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/center_right_tv_margin_left"
                android:text="20:03"
                android:textColor="@color/center_right_text_color_green"
                android:textSize="@dimen/center_right_text_size" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_title"
            android:layout_below="@id/ll_center"
            android:layout_marginTop="@dimen/corners_common">

            <TextView
                android:id="@+id/tv_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/polyv_tv_radius_blue"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="@dimen/corners_common_s"
                android:paddingLeft="@dimen/corners_common_l"
                android:paddingRight="@dimen/corners_common_l"
                android:paddingTop="@dimen/corners_common_s"
                android:text="下载"
                android:textColor="@color/top_layout_color_white"
                android:textSize="@dimen/center_bottom_text_size_s" />

            <TextView
                android:id="@+id/tv_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/talk_common_margin"
                android:layout_toRightOf="@id/tv_download"
                android:background="@drawable/polyv_tv_radius_green"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="@dimen/corners_common_s"
                android:paddingLeft="@dimen/corners_common_l"
                android:paddingRight="@dimen/corners_common_l"
                android:paddingTop="@dimen/corners_common_s"
                android:text="播放"
                android:textColor="@color/top_layout_color_white"
                android:textSize="@dimen/center_bottom_text_size_s" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>